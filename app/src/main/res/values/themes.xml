<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Graphedu" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_dark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_dark</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/color_primary_dark</item>
        <item name="android:windowBackground">@color/window_background_light</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Theme.Graphedu.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="MenuButtonText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="ActionButton">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textSize">16sp</item>
        <item name="layout_constraintWidth_percent">0.45</item>
    </style>

    <style name="ActionButton.ActionButtonPositive">
        <item name="android:background">@drawable/bg_solid_rounded</item>
        <item name="android:backgroundTint">@color/color_secondary</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="ActionButton.ActionButtonNegative">
        <item name="android:background">@drawable/bg_stroke_rounded</item>
        <item name="android:backgroundTint">@color/color_primary_dark</item>
        <item name="android:textColor">@color/color_primary_dark</item>
    </style>

</resources>