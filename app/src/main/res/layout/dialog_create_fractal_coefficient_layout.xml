<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="12dp"
    android:layout_marginStart="32dp"
    android:layout_marginEnd="32dp"
    android:padding="1dp"
    android:background="@drawable/bg_stroke_rounded"
    android:backgroundTint="@color/text_hint_color">

    <Button
        android:id="@+id/buttonK3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:layout_weight="1"
        android:background="@drawable/selector_fractal_k"
        android:foreground="@drawable/ripple_fractal_k"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/dialog_fractal_first_coefficient_label"
        android:textColor="@color/button_coefficient_text_color"
        android:textSize="14sp" />

    <Button
        android:id="@+id/buttonK4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:minHeight="0dp"
        android:layout_weight="1"
        android:background="@drawable/selector_fractal_k"
        android:foreground="@drawable/ripple_fractal_k"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/dialog_fractal_second_coefficient_label"
        android:textColor="@color/button_coefficient_text_color"
        android:textSize="14sp" />

</LinearLayout>